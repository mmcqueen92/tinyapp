<header>

  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" />
  </head>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link text-dark" href="/urls">My URLs</a>
        <a class="nav-item nav-link text-dark" href="/urls/new">Create New URL</a>
      </div>
      <% if (!user) { %>
        <a class="nav-item nav-link text-dark" href="/login">Log In</a>
        <a class="nav-item nav-link text-dark" href="/register">Register</a>
        <% } else if (user) { %>
          <form action="/logout" method="POST">
            <label for="logout" class="nav-item text-dark">Logged in as: <%= JSON.stringify(user.email) %></label>
            <button name="logout" type="submit" class="btn btn-secondary btn-sm">Log out</button>
          </form>
          <% }; %>
    </div>
  </nav>
</header>